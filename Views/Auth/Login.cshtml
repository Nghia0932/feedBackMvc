@{
    ViewData["Title"] = "Đăng nhập";
    ViewData["HideFooter"] = "d-none";  // Hide footer
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hệ thống quản lý Feedback của bệnh viện</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container" style="margin-top: 50px;">
        <div class="login-image"></div>
        <div class="login-form">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text">Hệ thống quản lý đánh giá và góp ý</h4>
                </div>
                <div class="card-body">
                    <form asp-action="LoginAdmin" method="post">
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <div class="input-container">
                                <input type="email" class="form-control form-control-sm input" id="Email" name="email" required>
                                <i class="fas fa-times close-icon"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password">Mật khẩu</label>
                            <div class="input-container">
                                <input type="password" class="form-control form-control-sm input" id="Password" name="password" required>
                                <i class="fas fa-eye toggle-password"></i>
                            </div>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="RememberMe" name="rememberMe">
                            <label class="form-check-label" for="RememberMe">Ghi nhớ đăng nhập</label>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                            <a href="/Account/ForgotPassword" class="btn btn-link">Quên mật khẩu?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
  @* Chỉ hiển thị modal nếu có lỗi *@
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="modal fade custom-modal-width" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Lỗi đăng nhập</h5>
                </div>
               <div class="modal-body" style="justify-content:space-between; display: flex;">
                 <img src="~/imgs/AdminLoginFail.png" alt="Error-Login" class="img-fluid " style="width:30%"/>
                    <div class="modal-body">
                        @ViewBag.ErrorMessage
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>       
                    </div>
                </div>
            </div>
        </div>
    </div>   
}
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="modal fade custom-modal-width" id="successModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Lỗi đăng nhập</h5>
                </div>
               <div class="modal-body" style="justify-content:space-between; display: flex;">
                 <img src="~/imgs/AdminLoginFail.png" alt="Error-Login" class="img-fluid " style="width:30%"/>
                    <div class="modal-body">
                        @ViewBag.ErrorMessage
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>       
                    </div>
                </div>
            </div>
        </div>
    </div>   
}

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/login.js"></script>
    <script>
        $(document).ready(function () {
            // Hiển thị modal nếu có lỗi
            var errorMessage = $('#errorModal').find('.modal-body').text().trim();
            if (errorMessage) {
                $('#errorModal').modal('show');
            }   
             // Hiển thị modal nếu thành công
            var successMessage = $('#successModal').find('.modal-body').text().trim();
            if (successMessage) {
                $('#successModal').modal('show');
            }   
            // Đóng modal khi nhấn nút đóng
            $('#errorModal .btn-secondary').on('click', function () {
                $('#errorModal').modal('hide');
            });
        });
    </script>

</body>
</html>
