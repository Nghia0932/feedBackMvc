@{
    ViewData["Title"] = "Khảo sát ý kiến";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hệ thống quản lý Feedback của bệnh viện</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/iconsax@1.0.0/dist/iconsax.min.css" />
    <style>
        /* Đảm bảo body và html chiếm toàn bộ chiều cao của trang */
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .surrvey {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            align-self: center;
            margin-top: 10%;
        }

        h5 {
            margin-bottom: 20px; /* Thêm khoảng cách giữa tiêu đề và hình ảnh */
        }

        .img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <!-- Có thể thêm header ở đây nếu cần -->

    <div class="container">
        <div class="surrvey">
            <h5 style="color: rgb(255, 169, 64);">Hiện tại chưa có cuộc khảo sát ý kiến nào!</h5>
            <img src="/imgs/No_Surrvey.jpg" class="img" alt="No-Surrvey.png" style="width: 50%;" />
        </div>
    </div>

    <!-- Có thể thêm footer ở đây nếu cần -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
