@model feedBackMvc.Models.Admins

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hệ thống quản lý feedback</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f0f0f3;
        }
        .profile-container {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 800px;
            margin: 40px auto;
            text-align: center;
        }
        .profile-header {
            background: #0000ff;
            color: #ffffff;
            padding: 20px;
            border-radius: 10px 10px 0 0;
        }
        .profile-header img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
        }
        .profile-header h2 {
            margin-top: 10px;
            font-size: 24px;
        }
        .profile-info {
            padding: 20px;
        }
        .profile-info p {
            font-size: 18px;
            margin: 10px 0;
        }
        .contact-info {
            background: #e9ecef;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
        }
        .contact-info h3 {
            font-size: 20px;
        }
        .contact-info p {
            font-size: 16px;
            margin: 5px 0;
        }
        .contact-info .icon {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-container">
            <!-- Profile Header -->
            <div class="profile-header">
                <img src="@Model.AvatarUrl" alt="Avatar" />
                <h2>@Model.Ten</h2>
            </div>
            <!-- Profile Info -->
            <div class="profile-info">
                <p><strong>ID:</strong> @Model.idAdmin</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <div class="contact-info">
                    <h3>Thông tin liên lạc</h3>
                    <p><i class="fas fa-phone icon"></i> @Model.Phone</p>
                    <p><i class="fas fa-map-marker-alt icon"></i> @Model.Address</p>
                    <!-- Thêm các thông tin liên lạc khác nếu cần -->
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
