@model feedBackMvc.Models.KhaoSatViewModel

<style>
    .table {
    border-radius: 10px;
    overflow: hidden;
    border: 2px solid #f0f0f3;
    > :not(caption)>*>* {
        box-shadow: inset 0 0 0 rgb(255, 255, 255);
    }
}

.table th {
    background-color: #007bff;
    color: white;
}

.table td {
    background-color: #ffffff;
    color: #000000;
    border: 1px solid #ddd;
}

tbody,
td,
tfoot,
th,
thead,
tr {
    border-color: #f0f0f3;
    border-style: solid;
    border-width: 2px;
}

.table thead th {
    background-color: #006ae7 !important;
}
h3{
    color: #007bff;
    font-size: larger;
}

/* Media query for responsive design */
@@media (max-width: 768px) {
    table, th, td {
        font-size: 12px;
    }

    table {
        max-width: 100%;
    }
}

</style>

<!-- Survey View -->

<h3> <i class="fas fa-poll"></i> Danh sách khảo sát nội trú</h3>
<table class="table">
    <thead>
        <tr>
            <th>Ngày tạo</th>
            <th>Tên mẫu khảo sát</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số lượng đánh giá </th>
            <th>Đánh giá hiện tại</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.IN_MauKhaoSatList)
        {
            <tr>
                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@item.TenMauKhaoSat</td>
                <td>@item.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                <td>@item.SoluongKhaoSat</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

